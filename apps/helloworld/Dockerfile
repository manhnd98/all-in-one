# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t helloworld`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system helloworld && \
          adduser --system -G helloworld helloworld

COPY dist/apps/helloworld helloworld
RUN chown -R helloworld:helloworld .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix helloworld --omit=dev -f install

CMD [ "node", "helloworld" ]
